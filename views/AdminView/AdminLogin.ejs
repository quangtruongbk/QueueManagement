<meta name="viewport" content="width=device-width, initial-scale=1">

<head>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
</head>

<body>
  <div class="admin-login-center">
    <h1>Trang quản lý cho Admin</h1>
    <form method="POST" action="/admin/login" style="padding: 1%">
      <%
      if(typeof status != 'undefined'){
        if(status=='401')
      {%>
      <p class="deactive-account-text"> Đăng nhập thất bại </p>
      <% }} %>
      <div class="form-group">
        <label for="username">Username:</label>
        <input type="text" name="username" class="form-control" required='required' placeholder="Username">
      </div>
      <div class="form-group">
        <label for="password">Mật khẩu:</label>
        <input type="password" name="password" class="form-control" required='required' placeholder="Mật khẩu">
      </div>
      <div class="form-group">
        <input type="submit" value="Đăng nhập" class="btn btn-primary">
      </div>
    </form>
  </div>
</body>